<div class="container homepg">
	<div class="opacChange">
	<div class="jumbotron">
	
	<div class="intro burntOrange">
		<h1>Welcome to James's Workout Tracker</h1>
	</div>
	</br>

	<div>
		<p>Log a recent exercise routine</p>
	</div>

	<form id="addRoutine" class="burntOrange">
	<div class="form-inline">
		<label  class="col-md-4" for="exercise">Exercise:</label>
		<div class="col-md-3">
			<input class="form-control mb-2" type="text" name="name" id="name" required>
		</div>
	</div>
	
	<div class="form-inline">
		<label class="col-md-4" for="reps" >Reps:</label>
		<div class="col-md-3">
			<input class="form-control mb-2" type="number" name="reps" id="reps">
		</div>
	</div>
	
	<div class="form-inline">
		<label class="col-md-4" for="weight">Weight:</label>
		<div class="col-md-3">
			<input class="form-control mb-2" type="number" name="weight" id="weight">
		</div>
	</div>
	
	<div class="form-inline">
		<label class="col-md-4 control-label" for="date">Date:</label>
		<div class="col-md-3">
			<input class="form-control mb-2" type="date" name="date" id="date">
		</div>
	</div>
	
	<div class="form-inline">
		<label class="col-md-4 control-label" for="units">Units:</label>
		<div class="col-md-3">
			<select class="form-control mb-2" name="units" id="units">
				<option value=1>lbs</option>
				<option value=0>kgs</option>
			</select>
		</div>
	</div>	
	
	<div class="form-inline">
		<div style="margin-left:13%">
			<button type="submit" class="form-control mb-2 btn btn-primary" id="addExercise">Submit</button>
		</div>
	</div>
	</form>

	</br></br>


	<table class="table" id="dataTable"> 
		<thead class="thead-dark">
			<th scope="col">Exercise</th>
			<th scope="col">Reps</th>
			<th scope="col">Weight</th>
			<th scope="col">Date</th>
			<th scope="col">Units</th>
			<th scope="col">Update</th>
			<th scope-"col">Delete</th>
		</thead>
		<tbody>
	    	{{#each workouts}}
			<tr>
				<td>{{name}}</td>
				<td>{{reps}}</td>
				<td>{{weight}}</td>
				<td>{{date}}</td>
				<td>{{#if lbs}}lbs{{else}}kgs{{/if}}</td>
				<td><a href="/newupdate/{{id}}"><button>Update</button></a></td>
				<td><input class="buttonInput" type="button" onclick="deleteExercise({{id}},'dataTable',this)" value="Delete"></td>
			</tr>
	    	{{/each}}
		</tbody>
	</table>
	</div>
	</div>
	</div>
</div>
