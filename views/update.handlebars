
<body>
<div class="container">
    <div class="col-sm-4 burntOrange">
        <h1>Update {{workout.name}}:</h1>
        </br>
    </div>

    <div class="row clearfix">
        <div class="col-md-12 column">
            <form  class="form-horizontal" role="form" id="update-exercise" method="get">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="exercise">Exercise:</label>
                <div class="col-sm-6">
                    <input class="form-control" type="text" name="name" value="{{workout.name}}">
                </div>
            </div>
 
            <div class="form-group">
                <label class="col-sm-2 control-label" for="reps">Reps:</label>
                <div class="col-sm-6">
                    <input class="form-control" type="number" name="reps" value="{{workout.reps}}">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label" for="weight">Weight:</label>
                <div class="col-sm-6">
                    <input class="form-control" type="number" name="weight" value="{{workout.weight}}">
                </div>
            </div>   

            <div class="form-group">
                <label class="col-sm-4 control-label" for="date">Date (yyyy-mm-dd):</label>
                <div class="col-sm-6">
                    <input class="form-control" type="text" name="date" value="{{workout.date}}">
                </div>
            </div>    

            <div class="form-group">
                <label class="col-sm-2 control-label" for="units">Units:</label>
                <div class="col-sm-6">
                    <select class="form-control mb-2" name="units" id="units-selector"> 
    
	                    {{#if workout.lbs}} 
                        <option value=1>lbs</option>
                        {{else}}
                        <option value=0>kgs</option>
                        {{/if}}
                        {{#if workout.lbs}}
                        <option value=0>kgs</option>
                        {{else}}
                        <option value=1>lbs</option>
                        {{/if}} 

                    </select>
                    </br>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-6">
	                <input type="hidden" name="id" value="{{workout.id}}">
                    <button class="btn btn-primary form-control" id="updater">Update</button>
                </div
            </div>
            </form>

        </div>
    </div>      
</div>
</body>

